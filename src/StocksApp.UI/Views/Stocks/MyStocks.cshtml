@model IEnumerable<UserStockResponse>

@{
  ViewBag.Title = "My stocks";
  ViewBag.CurrentUrl = "~/Stocks/MyStocks";
}

<!-- Breadcrums -->
<div class="flex mb">
  <div class="text-grey ml">
    <span>Stocks</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>My stocks</span>
  </div>

  <div class="flex-1 text-right"></div>
</div>

<div class="flex">

  <main class="table">

    <div class="table__header">
      <h2>My Stocks</h2>
    </div>
    <div class="table__body">
      <table>
        <thead>
          <tr>
            <th></th>
            <th> Stock symbol </th>
            <th> Stock name </th>
            <th> Quantity </th>
            <th> Total price </th>
          </tr>
        </thead>
        <tbody>
          @foreach (UserStockResponse userStock in @Model)
          {
            <tr>
              <td style="width: 12%;" align="center"> <img src="@ViewBag.CompaniesLogo[userStock.StockSymbol]" width="50px" alt="~/defaultStock.svg"> </td>
              <td style="width: 14%;"> @userStock.StockSymbol </td>
              <td style="width: 18%;"> @userStock.StockName </td>
              <td style="width: 13%;"> @userStock.Quantity </td>
              <td style="width: 20%;"> @userStock.TotalPrice <small>$</small> </td>
            </tr>
          }
        </tbody>
      </table>
    </div>

  </main>

</div>